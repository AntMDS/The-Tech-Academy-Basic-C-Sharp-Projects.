<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-10 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Add a student to the database</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddStudent", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="FirstName" type="text" class="form-control" placeholder="First name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="Age" type="number" class="form-control" placeholder="Age" />
                </div>
                <button type="Submit" class="btn btn-block btn-primary">Submit</button>
            </div>
            }
        </div>
    </div>
</div>